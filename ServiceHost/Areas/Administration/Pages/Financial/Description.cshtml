@model AccountManagement.Application.Contract.Wallet.RejectRequestWithdrawDto
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">رد درخواست برداشت</h4>
</div>

<form asp-page="./SettlementRequests" asp-page-handler="Reject"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label">علت رد درخواست</label>
                    <textarea rows="5" class="form-control" asp-for="Description">
                    </textarea>
                    <span asp-validation-for="Description" class="error"></span>
                </div>
            </div>
        </div>
        <input value="@Model.AccountId" type="hidden" asp-for="AccountId" />
        <input value="@Model.TransactionId" type="hidden" asp-for="TransactionId" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-danger waves-effect waves-light">رد</button>
    </div>
</form>


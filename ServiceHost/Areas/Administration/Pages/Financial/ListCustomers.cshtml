@page
@using _01_Framework.Application
@using _01_Framework.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ServiceHost.Areas.Administration.Pages.Financial.ListCustomersModel
@{
    Layout = "Shared/_AdminLayout";
    ViewBag.Title = "لیست مشتریان";
}


<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewBag.Title</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در مشتریان</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.FullName"></label>
                        <input class="form-control" asp-for="SearchModel.FullName" data-val="false" placeholder="نام">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Code"></label>
                        <input class="form-control" asp-for="SearchModel.Code" data-val="false" placeholder="کد دانشجویی">
                    </div>
                    <div class="form-group">
                        <label class="sr-only"></label>
                        <select class="form-control" asp-items="Model.UniTypes" data-val="false" onchange="FillUnis(this);">
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.UniversityId"></label>
                        <select class="form-control select22" asp-for="SearchModel.UniversityId" asp-items="Model.Unis" data-val="false" id="lstUnis">
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.CourseName"></label>
                        <input class="form-control" asp-for="SearchModel.CourseName" data-val="false" placeholder="درس">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.ClassCode"></label>
                        <input class="form-control" asp-for="SearchModel.ClassCode" data-val="false" placeholder="کد کلاس">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.ClassDay"></label>
                        <select class="form-control" asp-for="SearchModel.ClassDay" asp-items='new SelectList(Days.List, "Id", "Name")' data-val="false">
                            <option value="0">روز کلاس</option>

                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.ClassStartTime"></label>
                        <select class="form-control" asp-for="SearchModel.ClassStartTime" asp-items='new SelectList(Times.List, "Value", "Value")' data-val="false">
                            <option value="0">ساعت شروع کلاس</option>

                        </select>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./ListCustomers">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>


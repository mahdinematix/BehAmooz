@page
@using _01_Framework.Application
@using _01_Framework.Infrastructure
@model ServiceHost.Areas.Administration.Pages.Financial.SettlementRequestsModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "درخواست های برداشت";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در درخواست های برداشت</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.FullName"></label>
                        <input class="form-control" asp-for="SearchModel.FullName" data-val="false" placeholder="نام کاربر">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.RoleId"></label>
                        <select class="form-control" asp-for="SearchModel.RoleId">
                            <option value="0">نقش ...</option>
                            <option value="2">استاد</option>
                            <option value="3">دانشجو</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.NationalCode"></label>
                        <input class="form-control" asp-for="SearchModel.NationalCode" data-val="false" placeholder="کد ملی">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Status"></label>
                        <select class="form-control" asp-for="SearchModel.Status" data-val="false" placeholder="وضعیت">
                            <option value="0">وضعیت</option>
                            <option value="@TransactionStatuses.Pending">در انتظار پرداخت</option>
                            <option value="@TransactionStatuses.Paid">پرداخت شده</option>
                            <option value="@TransactionStatuses.Rejected">رد شده</option>
                            <option value="@TransactionStatuses.Canceled">لغو شده</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست درخواست های برداشت</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>کاربر</th>
                                    <th>نقش</th>
                                    <th>کد ملی</th>
                                    <th>شماره کارت یا شبا</th>
                                    <th>مبلغ (تومان)</th>
                                    <th>وضعیت</th>
                                    <th>توضیحات</th>
                                    <th>تاریخ</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.SettlementRequests)
                                {
                                    <tr>
                                        <td>@item.TransactionId</td>
                                        <td>@item.FullName</td>
                                        <td>@Roles.GetRoleBy(item.RoleId)</td>
                                        <td>@item.NationalCode</td>
                                        <td>@item.CreditCardNo</td>
                                        <td>@item.Amount.ToMoney()</td>
                                        <td>
                                            @if (item.Status == TransactionStatuses.Rejected)
                                            {
                                                <span class="text-danger">رد شده</span>
                                            }
                                            @if (item.Status == TransactionStatuses.Paid)
                                            {
                                                <span class="text-success">پرداخت شده</span>
                                            }
                                            @if (item.Status == TransactionStatuses.Pending)
                                            {
                                                <span class="text-warning">در انتظار پرداخت</span>
                                            }
                                            @if (item.Status == TransactionStatuses.Canceled)
                                            {
                                                <span class="text-danger">لغو شده</span>
                                            }
                                        </td>
                                        <td>@item.Description</td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            @if (item.Status == TransactionStatuses.Pending)
                                            {
                                                <a class="btn btn-success pull-right m-rl-5" href="#showmodal=@Url.Page("./SettlementRequests", "Pay", new { transactionId = item.TransactionId })">پرداخت</a>
                                                <a class="btn btn-danger pull-right m-rl-5" href="#showmodal=@Url.Page("./SettlementRequests", "Reject", new { transactionId = item.TransactionId })">رد</a>
                                            }
                                            @if (item.Status == TransactionStatuses.Rejected || item.Status == TransactionStatuses.Paid)
                                            {
                                                <a class="btn btn-warning pull-right m-rl-5" href="#showmodal=@Url.Page("./SettlementRequests", "Edit", new { transactionId = item.TransactionId })">ویرایش</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}


@using _01_Framework.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AccountManagement.Application.Contract.Account.RegisterAccount
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد کاربر جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="RoleId" class="control-label">نقش</label>
                    <select type="text" class="form-control" asp-for="RoleId" asp-items='new SelectList(Model.Roles,"Id","Name")'>
                        <option value="0">نقش...</option>
                    </select>
                    <span asp-validation-for="RoleId" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Code" class="control-label">کد دانشجویی/استادی</label>
                    <input type="text" maxlength="20" class="form-control" asp-for="Code">
                    <span asp-validation-for="Code" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">نام</label>
                    <input type="text" maxlength="150" class="form-control" asp-for="FirstName">
                    <span asp-validation-for="FirstName" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">نام خانوادگی</label>
                    <input type="text" maxlength="200" class="form-control" asp-for="LastName">
                    <span asp-validation-for="LastName" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="NationalCode" class="control-label">کد ملی</label>
                        <input type="text" maxlength="10" class="form-control" asp-for="NationalCode">
                        <span asp-validation-for="NationalCode" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NationalCardPicture" class="control-label">کارت ملی</label>
                    <input type="text" data-val="false" class="form-control" asp-for="NationalCardPicture">
                    <span asp-validation-for="NationalCardPicture" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="form-group select2-container select2">
                        <label asp-for="Major" class="control-label">رشته</label>
                        <select class="form-control select2 select2-offscreen" asp-for="Major" asp-items='new SelectList(Majors.List,"Id", "Name")'>
                            <option value="0">رشته</option>
                        </select>
                        <span asp-validation-for="Major" class="error"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="UniversityType" class="control-label">نوع دانشگاه</label>
                        <select id="branchesDropDown" class="form-control" asp-items='new SelectList(UniversityTypes.List, "Id", "Name")'>
                            <option value="0">نوع دانشگاه</option>
                        </select>
                        <span asp-validation-for="UniversityType" class="error"></span>
                    </div> 
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.DropDownListFor(r => r.University, new SelectList(new List<string>(), "Id", "Name"), new { @class = "form-control", id = "roomsDropDown" })
                    @* <label asp-for="University" class="control-label">دانشگاه</label>
                    <select class="form-control" asp-for="University" asp-items='new SelectList(Universities.List, "Id", "Name")'>
                        <option value="0">دانشگاه</option>
                    </select>
                    <span asp-validation-for="University" class="error"></span> *@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">رمز عبور</label>
                        <input type="text" class="form-control" asp-for="Password">
                        <span asp-validation-for="Password" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="RePassword" class="control-label">تکرار رمز عبور</label>
                        <input type="text" class="form-control" asp-for="RePassword">
                        <span asp-validation-for="RePassword" class="error"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">موبایل</label>
                    <input type="text" maxlength="14" class="form-control" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Email" class="control-label">ایمیل</label>
                    <input type="text" maxlength="300" class="form-control" data-val="false" asp-for="Email">
                    <span asp-validation-for="Email" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ثبت نام</button>
    </div>
</form>


@section Scripts
{
    <script>
        $(document).ready(function () {
            var branchesDropDown = $("#branchesDropDown ");
            var roomsDropDown= $("#roomsDropDown");

            branchesDropDown.ready(function () {

                $.ajax({
                    url: "api/uniTypes",
                    type: "GET",
                    success: function (data) {
                        $.each(data, function () {
                            branchesDropDown.append("<option value='" + this.Id + "'>" + this.Name + "</option>")
                        });
                    }
                }).done(function () {
                    $.ajax({
                        url: "api/unisByType/" + @Model.UniversityType,
                        type: "GET",
                        success: function (data) {
                            $.each(data, function () {                                    
                                roomsDropDown.append("<option value='" + this.Id + "'>" + this.Name + "</option>");
                            });
                        }
                    });
                });

                branchesDropDown.on("change", function () {
                    $.ajax({
                        url: "/api/unisByType/" + branchesDropDown.val(),
                        type: "GET",
                        success: function (data) {
                            roomsDropDown.empty();
                            $.each(data, function () {
                                roomsDropDown.append("<option value='" + this.Id + "'>" + this.Name + "</option>");
                            });
                        }
                    });
                });
    </script>
}

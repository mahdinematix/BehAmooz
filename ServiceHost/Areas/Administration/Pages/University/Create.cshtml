@model StudyManagement.Application.Contracts.University.DefineUniversity
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">تعریف دانشگاه جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label" asp-for="Type">نوع دانشگاه</label>
                    <select class="form-control" asp-for="Type" asp-items='new SelectList(Model.UniTypes, "Id", "Name")' data-val="false">
                        <option value="0">نوع دانشگاه را انتخاب کنید</option>
                    </select>
                    <span asp-validation-for="Type" class="error"></span>
                </div>
            </div>
        </div>
       
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">تعریف</button>
    </div>
</form>

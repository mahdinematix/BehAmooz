@page
@using _01_Framework.Infrastructure
@model ServiceHost.Areas.Administration.Pages.University.IndexModel
@{
    Layout = "Shared/_AdminLayout";
    ViewBag.Title = "مدیریت دانشگاه ها";
}


<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewBag.Title</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">تعریف دانشگاه جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در دانشگاه ها</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Name"></label>
                        <input class="form-control" asp-for="SearchModel.Name" data-val="false" placeholder="نام دانشگاه">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Type"></label>
                        <select class="form-control" asp-for="SearchModel.Type" asp-items="Model.UniTypes" data-val="false">
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.CurrentSemesterId"></label>
                        <select class="form-control" asp-for="SearchModel.CurrentSemesterId" asp-items="Model.SemesterCodes">
                            <option value="0">ترم فعال ...</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست دانشگاه ها (@Model.Universities.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نوع دانشگاه</th>
                                    <th>نام</th>
                                    <th>ترم فعال</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ تعریف</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Universities)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@UniversityTypes.GetName(item.Type)</td>
                                        <td>@item.Name</td>
                                        <td>
                                            @if (item.CurrentSemesterId >0)
                                            {
                                                <span>@item.CurrentSemesterCode</span>
                                            }
                                            else
                                            {
                                                <span>ندارد</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <i class="fa fa-2x fa-check text-success"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-2x fa-close text-danger"></i>
                                            }
                                        </td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            <a class="btn btn-warning pull-right m-rl-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                            @if (item.IsActive)
                                            {
                                                <a class="btn btn-danger" asp-page="./Index" asp-page-handler="Deactivate" asp-route-id="@item.Id">غیرفعالسازی</a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-success" asp-page="./Index" asp-page-handler="Activate" asp-route-id="@item.Id">فعالسازی</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}


@page
@using _01_Framework.Infrastructure
@model ServiceHost.Areas.Administration.Pages.ActivityLog.IndexModel
@{
    Layout = "Shared/_AdminLayout";
    ViewBag.Title = "تاریخچه عملیات اساتید";
}

@section Css
{
    <style>
        .wrap-text {
            white-space: normal !important;
            word-wrap: break-word;
            max-width: 300px;
        }

    </style>
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در تاریخچه عملیات ها</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.AccountRole"></label>
                        <select class="form-control" asp-for="SearchModel.AccountRole" data-val="false">
                            <option value="0">نقش کاربر را انتخاب کنید...</option>
                            <option value="@Roles.GetRoleBy(long.Parse(Roles.Administrator))">مدیر سیستم</option>
                            <option value="@Roles.GetRoleBy(long.Parse(Roles.Professor))">استاد</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.AccountName"></label>
                        <input class="form-control" asp-for="SearchModel.AccountName" data-val="false" placeholder="نام کاربر">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.AccountNationalCode"></label>
                        <input class="form-control" asp-for="SearchModel.AccountNationalCode" data-val="false" placeholder="کد ملی کاربر">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.TargetType"></label>
                        <select class="form-control" asp-for="SearchModel.TargetType" data-val="false">
                            <option value="0">هدف عملیات را انتخاب کنید...</option>
                            <option value="@TargetTypes.Course">درس</option>
                            <option value="@TargetTypes.Class">کلاس</option>
                            <option value="@TargetTypes.Session">جلسه</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Operation"></label>
                        <select class="form-control" asp-for="SearchModel.Operation" data-val="false">
                            <option value="0">نوع عملیات را انتخاب کنید...</option>
                            <option value="@Operations.Create">ایجاد</option>
                            <option value="@Operations.Edit">ویرایش</option>
                            <option value="@Operations.Activate">فعالسازی</option>
                            <option value="@Operations.Deactivate">غیر فعالسازی</option>
                            <option value="@Operations.Copy">کپی جلسات</option>
                        </select>
                    </div>
                    @if (Model.ShowUniversityFiled)
                    {
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.UniversityTypeId"></label>
                            <select class="form-control" asp-for="SearchModel.UniversityTypeId" asp-items="Model.UniTypes" data-val="false" onchange="FillActiveUnisA(this);">
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.UniversityId"></label>
                            <select class="form-control select22" asp-for="SearchModel.UniversityId" asp-items="Model.Unis" data-val="false" id="lstUnis">
                            </select>
                        </div>
                    }
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Description"></label>
                        <input class="form-control" asp-for="SearchModel.Description" data-val="false" placeholder="توضیحات">
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">تاریخچه عملیات اساتید</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نقش</th>
                                    <th>نام</th>
                                    <th>کد ملی</th>
                                    <th>هدف عملیات</th>
                                    <th>نوع عملیات</th>
                                    <th>دانشگاه</th>
                                    <th>توضیحات</th>
                                    <th>تاریخ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Logs)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.AccountRole</td>
                                        <td>@item.AccountName</td>
                                        <td>@item.AccountNationalCode</td>
                                        <td>@item.TargetType</td>
                                        <td>@item.Operation</td>
                                        <td>@item.UniversityName</td>
                                        <td class="wrap-text">@item.Description</td>
                                        <td>@item.CreationDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}



@using _01_Framework.Application
@using _01_Framework.Infrastructure
@inject IAuthHelper AuthHelper
@{
}
<div class="left side-menu">
    <div class="sidebar-inner slimscrollleft">
        <div class="user-details">
            <div class="pull-right">
                <img src="~/AdminTheme/assets/images/users/user-solid.svg" alt="" class="thumb-md img-circle">
            </div>
            <div class="user-info">
                <div class="dropdown">
                    <a asp-page="/Profile" asp-area="" class="dropdown-toggle" >@AuthHelper.GetAccountInfo().Fullname</a>
                </div>

                <p class="text-muted m-0">@AuthHelper.GetAccountInfo().Role</p>
            </div>
        </div>
        <div id="sidebar-menu">
            <ul>
                <li>
                    <a asp-page="/Index" class="waves-effect active">
                        <i class="md md-home"></i><span> داشبورد </span>
                    </a>
                </li>

                <li>
                    <a asp-page="/Course/Index" class="waves-effect">
                        <i class="fa fa-university"></i><span> مدیریت درسی </span>
                    </a>
                </li>
                @if (AuthHelper.CurrentAccountRole() == Roles.Administrator)
                {
                    <li>
                        <a asp-page="/Message/Index" class="waves-effect">
                            <i class="fa fa-inbox"></i><span> مدیریت پیام ها </span>
                        </a>
                    </li>
                }

                @if (AuthHelper.CurrentAccountRole() == Roles.Administrator)
                {
                    <li>
                        <a class="waves-effect" asp-page="/Accounts/Account/Index"><i class="fa fa-user"></i><span> مدیریت کاربران </span><span class="pull-right"></span></a>
                    </li>
                }
                else
                {
                    <li>
                        <a class="waves-effect" asp-page="/Accounts/Account/Index"><i class="fa fa-user"></i><span> مدیریت دانشجویان </span><span class="pull-right"></span></a>
                        
                    </li>
                }
                
                @if (AuthHelper.CurrentAccountRole() == Roles.Administrator)
                {

                    <li class="has_sub">
                        <a class="waves-effect"><i class="fa fa-money"></i><span> مدیریت مالی </span>
                    <span class="pull-right"><i class="md md-add"></i></span>

                        </a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Financial/SettlementRequests">درخواست های تسویه حساب</a></li>
                            <li><a asp-page="/Financial/Logs">تراکنش ها</a></li>
                        </ul>

                    </li>
                }
                else
                {
                    <li class="has_sub">
                        <a class="waves-effect"><i class="fa fa-money"></i><span> مدیریت مالی </span>
                            <span class="pull-right"><i class="md md-add"></i></span>

                        </a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Financial/Wallet">کیف پول</a></li>
                            <li><a asp-page="/Financial/ListCustomers">لیست مشتریان</a></li>
                            <li><a asp-page="/Financial/Logs">تراکنش ها</a></li>
                        </ul>

                    </li>
                }

                <li><a asp-page="/Login" asp-page-handler="Logout" class="waves-effect active"><i class="fa fa-sign-out"></i><span> خروج </span></a></li>

            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

@using _01_Framework.Infrastructure
@model StudyManagement.Application.Contracts.Course.EditCourse
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش درس @Model.Name</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام درس</label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Code" class="control-label">کد درس</label>
                    <input type="text" class="form-control" asp-for="Code" maxlength="10" />
                    <span asp-validation-for="Code" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Major" class="control-label">رشته</label>
                    <select asp-for="Major" class="form-control" asp-items='new SelectList(Majors.List, "Id", "Name")'>
                        <option value="0">رشته درس را انتخاب کنید ...</option>
                    </select>
                    <span asp-validation-for="Major" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NumberOfUnit" class="control-label">تعداد واحد درسی</label>
                    <input type="number" max="3" min="1" class="form-control" asp-for="NumberOfUnit">
                    <span asp-validation-for="NumberOfUnit" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CourseKind" class="control-label">نوع درس</label>
                    <select type="text" class="form-control" asp-for="CourseKind">
                        <option value="0">نوع درس را انتخاب کنید ...</option>
                        <option value="نظری">نظری</option>
                        <option value="عملی">عملی</option>
                    </select>
                    <span asp-validation-for="CourseKind" class="error"></span>
                </div>
            </div>
        </div>
        <input type="hidden" value="@Model.Id" asp-for="Id" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>

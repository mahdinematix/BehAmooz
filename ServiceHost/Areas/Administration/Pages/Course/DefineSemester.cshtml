@using _01_Framework.Application
@using _01_Framework.Infrastructure
@model StudyManagement.Application.Contracts.Semester.DefineSemester
@{
    List<SelectListItem> Years;
    var years = GetSelectableYears();
    Years = years.Select(y => new SelectListItem
    {
        Value = y.ToString(),
        Text = y.ToString()
    }).ToList();

    List<int> GetSelectableYears()
    {
        var currentYear = DateTime.Now.ToFarsiYear();

        return Enumerable
            .Range(currentYear, 2)
            .ToList();
    }
}



<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">تنظیم ترم</h4>
</div>

<form asp-page="./Index" asp-page-handler="DefineSemester"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Year" class="control-label">سال</label>
                    <select type="text" class="form-control" asp-for="Year" asp-items="Years">
                        <option value="0">سال را انتخاب کنید ...</option>
                    </select>
                    <span asp-validation-for="Year" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="MidYear" class="control-label">نیمسال</label>
                    <select type="text" class="form-control" asp-for="MidYear">
                        <option value="0">نیمسال را انتخاب کنید ...</option>
                        <option value="@MidYears.First">@MidYears.GetMidYearBy(MidYears.First)</option>
                        <option value="@MidYears.Second">@MidYears.GetMidYearBy(MidYears.Second)</option>
                        <option value="@MidYears.Summer">@MidYears.GetMidYearBy(MidYears.Summer)</option>

                    </select>
                    <span asp-validation-for="MidYear" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">تنظیم</button>
    </div>
</form>


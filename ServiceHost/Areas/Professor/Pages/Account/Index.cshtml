@page
@using _01_Framework.Application
@using _01_Framework.Infrastructure
@model ServiceHost.Areas.Professor.Pages.Account.IndexModel
@{
    Layout = "Shared/_ProfessorLayout";
    ViewBag.Title = "مدیریت دانشجویان";
}


<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewBag.Title</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" asp-page="./Create">ثبت نام دانشجوی جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در دانشجویان</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.FullName"></label>
                        <input class="form-control" asp-for="SearchModel.FullName" data-val="false" placeholder="نام">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Code"></label>
                        <input class="form-control" asp-for="SearchModel.Code" data-val="false" placeholder="کد دانشجویی">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.NationalCode"></label>
                        <input class="form-control" asp-for="SearchModel.NationalCode" data-val="false" placeholder="کد ملی">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.MajorId"></label>
                        <select class="form-control select22" asp-for="SearchModel.MajorId" asp-items='new SelectList(Majors.List, "Id", "Name")' data-val="false" placeholder="رشته">
                            <option value="0">رشته</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.UniversityTypeId"></label>
                        <select class="form-control" asp-for="SearchModel.UniversityTypeId" asp-items="Model.UniTypes" data-val="false" onchange="FillActiveUnisP(this);">
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.UniversityId"></label>
                        <select class="form-control select22" asp-for="SearchModel.UniversityId" asp-items="Model.Unis" data-val="false" id="lstUnis">
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.PhoneNumber"></label>
                        <input class="form-control" asp-for="SearchModel.PhoneNumber" data-val="false" placeholder="موبایل">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Email"></label>
                        <input class="form-control" asp-for="SearchModel.Email" data-val="false" placeholder="ایمیل">
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست دانشجویان (@Model.Students.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>نام</th>
                                    <th>کد دانشجویی</th>
                                    <th>کد ملی</th>
                                    <th>کارت ملی</th>
                                    <th>رشته</th>
                                    <th>دانشگاه</th>
                                    <th>موبایل</th>
                                    <th>ایمیل</th>
                                    <th>تاریخ ثبت نام</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Students)
                                {
                                    <tr>
                                        <td>@item.FullName</td>
                                        <td>@item.Code.Substring(0, 7) ...</td>
                                        <td>@item.NationalCode.Substring(0, 7) ...</td>
                                        <td><a href="@item.NationalCardPicture" target="_blank">
                                                <img src="@item.NationalCardPicture" width="50px" />
                                            </a>
                                        </td>
                                        <td>@Majors.GetName(item.MajorId)</td>
                                        <td>@item.UniversityName</td>
                                        <td>@item.PhoneNumber.Substring(0, 7) ...</td>
                                        <td>@item.Email.Substring(0, 7) ...</td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            @if (item.Status == Statuses.Rejected)
                                            {
                                                <span class="text-danger">رد</span>
                                            }
                                            @if (item.Status == Statuses.Confirmed)
                                            {
                                                <span class="text-success">تایید</span>
                                            }
                                            @if (item.Status == Statuses.Waiting)
                                            {
                                                <span class="text-warning">انتظار</span>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-warning pull-right m-rl-5"
                                               asp-page="./Edit" asp-route-id="@item.Id">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#datatable').dataTable();
        });
    </script>

    <script>
        $(document).ready(function () {
            $(".select22").select2();
        });
    </script>
}

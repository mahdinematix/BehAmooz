@page "{universityId}"
@using _01_Framework.Infrastructure
@using _01_Framework.Application
@model ServiceHost.Areas.Professor.Pages.Course.IndexModel
@{
    Layout = "Shared/_ProfessorLayout";
    ViewBag.Title = "مدیریت دروس";
}


<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewBag.Title</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" asp-page="./Create" asp-route-universityId="@Model.UniversityId">تعریف درس جدید</a>
            <a asp-page="/SelectUniversity/Index" class="btn btn-primary btn-lg">بازگشت</a>
        </p>
        <div class="text-center">
            <p>نیمسال @Model.CurrentSemester.MidYear سال @Model.CurrentSemester.Year - @Model.CurrentSemester.Code</p>
        </div>
        <div class="text-center">
            <p>@Model.UniversityName</p>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در دروس</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Name"></label>
                        <input class="form-control" asp-for="SearchModel.Name" data-val="false" placeholder="نام درس">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Code"></label>
                        <input class="form-control" asp-for="SearchModel.Code" data-val="false" placeholder="کد درس">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Major"></label>
                        <select class="form-control select22" asp-for="SearchModel.Major" asp-items='new SelectList(Majors.List, "Id", "Name")' data-val="false" placeholder="رشته">
                            <option value="0">رشته درس را انتخاب کنید</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.CourseKind"></label>
                        <select class="form-control" asp-for="SearchModel.CourseKind" data-val="false">
                            <option value="0">نوع درس را انتخاب کنید...</option>
                            <option value="نظری">نظری</option>
                            <option value="عملی">عملی</option>
                            <option value="نظری-عملی">نظری-عملی</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.EducationLevel"></label>
                        <select class="form-control" asp-for="SearchModel.EducationLevel" data-val="false" placeholder="مقطع تحصیلی">
                            <option value="0">مقطع تحصیلی</option>
                            <option value="@EducationLevels.Kardani">کاردانی</option>
                            <option value="@EducationLevels.Karshenasi">کارشناسی</option>
                            <option value="@EducationLevels.Arshad">کارشناسی ارشد</option>
                            <option value="@EducationLevels.Doktora">دکتری</option>
                            <option value="@EducationLevels.FoghDoktora">فوق دکتری</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.SemesterId"></label>
                        <select class="form-control" asp-for="SearchModel.SemesterId" asp-items="Model.SemesterCodes">
                            <option value="0">ترم ...</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست دروس (@Model.Courses.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام درس</th>
                                    <th>کد درس</th>
                                    <th>رشته</th>
                                    <th>تعداد واحد</th>
                                    <th>نوع درس</th>
                                    <th>مقطع</th>
                                    <th>ترم</th>
                                    <th>تعداد کلاس</th>
                                    <th>قیمت هر جلسه</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ تعریف</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Courses)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Code</td>
                                        <td>@Majors.GetName(item.Major)</td>
                                        <td>@item.NumberOfUnit</td>
                                        <td>@item.CourseKind</td>
                                        <td>@EducationLevels.GetEducationLevelById(item.EducationLevel)</td>
                                        <td>@item.SemesterCode</td>
                                        <td>@item.ClassesCount</td>
                                        <td>@item.Price.ToMoney() تومان</td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <i class="fa fa-2x fa-check text-success"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-2x fa-close text-danger"></i>
                                            }
                                        </td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            <a class="btn btn-warning pull-right m-rl-5" asp-page="./Edit" asp-route-id="@item.Id" asp-route-universityId="@Model.UniversityId">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                            @if (item.IsActive)
                                            {
                                                <a class="btn btn-danger" asp-page="./Index" asp-page-handler="DeActivate" asp-route-id="@item.Id">غیرفعالسازی</a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-success" asp-page="./Index" asp-page-handler="Activate" asp-route-id="@item.Id">فعالسازی</a>
                                            }
                                            <a class="btn btn-primary pull-right m-rl-5" asp-page="/Class/Index" asp-route-courseId="@item.Id">مشاهده کلاس ها</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $(".select22").select2();
        });
    </script>

}


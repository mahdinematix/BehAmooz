@page
@using _01_Framework.Application
@model ServiceHost.Pages.LogModel
@{
    Layout = "Shared/_Layout";
    ViewData["title"] = "تراکنش های من";
}

@section Css
{
    <style>
        table th, table td {
            word-wrap: break-word;
            text-align: center;
        }

        table th {
            width: 120px;
        }

        .modal-dialog {
            max-width: 90%;
        }

        .modal-body {
            max-height: 400px;
            overflow-y: auto;
        }

    </style>
}


<div class="row m-5">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در تراکنش ها</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">

                    <div class="form-group m-2">
                        <label class="sr-only" asp-for="SearchModel.Status"></label>
                        <select class="form-control" asp-for="SearchModel.Status" data-val="false">
                            <option value="0">وضعیت را انتخاب کنید</option>
                            <option value="@TransactionStatuses.Rejected">رد شده</option>
                            <option value="@TransactionStatuses.Canceled">لغو شده</option>
                            <option value="@TransactionStatuses.Paid">موفق</option>
                            <option value="@TransactionStatuses.Pending">در انتظار پرداخت</option>
                        </select>
                    </div>
                    <div class="form-group m-2">
                        <label class="sr-only" asp-for="SearchModel.Type"></label>
                        <select class="form-control" asp-for="SearchModel.Type" data-val="false">
                            <option value="0">نوع تراکنش را انتخاب کنید</option>
                            <option value="@TransactionTypes.Deposit">شارژ</option>
                            <option value="@TransactionTypes.Withdraw">برداشت</option>
                            <option value="@TransactionTypes.PayFromWallet">پرداخت با کیف پول</option>
                            <option value="@TransactionTypes.PayFromGateway">پرداخت مستقیم</option>
                        </select>
                    </div>
                    <button type="submit" class=" m-2 btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10  m-2" asp-page="./Log">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row m-5" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading text-center mb-4">
                <h3 class="panel-title" id="courses">لیست تراکنش های من</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>تراکنش</th>
                                    <th>شماره کارت یا شبا</th>
                                    <th>مبلغ + 10 درصد مالیات (تومان)</th>
                                    <th>وضعیت</th>
                                    <th>توضیحات</th>
                                    <th>تاریخ</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Logs)
                                {
                                    <tr>
                                        <td>@TransactionTypes.GetTypeById(item.Type)</td>
                                        <td>@item.CreditCardNo</td>
                                        <td>@item.Amount.ToMoney()</td>
                                        <td>
                                            @if (item.Status == TransactionStatuses.Rejected)
                                            {
                                                <span class="text-danger">رد شده</span>
                                            }
                                            @if (item.Status == TransactionStatuses.Paid)
                                            {
                                                <span class="text-success">موفق</span>
                                            }
                                            @if (item.Status == TransactionStatuses.Pending)
                                            {
                                                <span class="text-warning">در انتظار پرداخت</span>
                                            }
                                            @if (item.Status == TransactionStatuses.Canceled)
                                            {
                                                <span class="text-danger">لغو شده</span>
                                            }
                                        </td>
                                        <td>@item.Description</td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            @if (item.Type == TransactionTypes.PayFromWallet || item.Type == TransactionTypes.PayFromGateway)
                                            {

                                                <button class="btn btn-primary pull-right m-rl-5"
                                                        data-toggle="modal"
                                                        data-target="#orderItemsModal"
                                                        data-id="@item.OrderId">
                                                    <i class="fa fa-id-card"></i> آیتم ها
                                                </button>

                                            }
                                            @if (item.Status == TransactionStatuses.Pending)
                                            {
                                                <a class="btn btn-danger pull-right m-rl-5" asp-page-handler="Cancel" asp-route-transactionId="@item.TransactionId">
                                                    <i class="fa fa-close"></i> لغو
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="orderItemsModal" tabindex="-1" role="dialog" aria-labelledby="orderItemsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="orderItemsModalLabel">آیتم های سفارش</h4>
            </div>
            <div class="modal-body" id="modalBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {

            $('#orderItemsModal').on('show.bs.modal', function (e) {
                var button = $(e.relatedTarget);
                var orderId = button.data('id');
                var modal = $(this);

                $.ajax({
                    url: '/Log?handler=Items&id=' + orderId,
                    method: 'GET',
                    success: function (data) {
                        modal.find('#modalBody').html(data);
                    },
                    error: function () {
                        modal.find('#modalBody').html('<p>خطا در بارگذاری داده‌ها.</p>');
                    }
                });
            });
        });
    </script>

    <script>
        document.addEventListener("scroll", function (e) {
            e.stopImmediatePropagation();
        }, true);
    </script>
}
@page "{courseId}"
@using _01_Framework.Application
@using _01_Framework.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ClassModel
@{
}


<div class="row m-5" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading text-center mb-4">
                <h3 class="panel-title">کلاس های درس @Model.Course</h3>
                <a class="btn btn-primary btn-lg btn-back" asp-page="/Index">بازگشت</a>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>استاد</th>
                                    <th>کد کلاس</th>
                                    <th>روز</th>
                                    <th>ساعت شروع</th>
                                    <th>ساعت پایان</th>
                                    <th>تعداد جلسات</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Classes)
                                {
                                        <tr>
                                            <td>@item.ProfessorFullName</td>
                                            <td>@item.Code</td>
                                            <td>@Days.GetName(item.Day)</td>
                                            <td>@item.StartTime.ToShownTime()</td>
                                            <td>@item.EndTime.ToShownTime()</td>
                                            <td>@item.SessionsCount</td>
                                            <td><a class="btn btn-success" asp-page="/Sessions" asp-route-classId="@item.Id">مشاهده جلسات</a></td>  
                                        </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@page
@using _01_Framework.Application
@model ServiceHost.Pages.OrdersModel
@{
}
@{
    Layout = "Shared/_Layout";
    ViewData["title"] = "جزئیات سفارشات من";
}

@section Css
{
    <style>
        table th, table td {
            word-wrap: break-word;
            text-align: center;
        }

        table th {
            width: 120px;
        }

        .modal-dialog {
            max-width: 90%; 
        }

        .modal-body {
            max-height: 400px; 
            overflow-y: auto;
        }

    </style>
}


<div class="row m-5" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading text-center mb-4">
                <h3 class="panel-title" id="courses">جزئیات سفارشات من</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>مبلغ (تومان)</th>
                                <th>تاریخ</th>
                                <th>عملیات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.Orders)
                            {
                                <tr>
                                    <td>@item.Amount.ToMoney()</td>
                                    <td>@item.PayDate</td>
                                    <td>
                                        <button class="btn btn-primary pull-right m-rl-5" 
                                                data-toggle="modal" 
                                                data-target="#orderItemsModal" 
                                                data-id="@item.Id">
                                            <i class="fa fa-id-card"></i> آیتم ها
                                        </button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="orderItemsModal" tabindex="-1" role="dialog" aria-labelledby="orderItemsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="orderItemsModalLabel">آیتم های سفارش</h4>
            </div>
            <div class="modal-body" id="modalBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {

            $('#orderItemsModal').on('show.bs.modal', function (e) {
                var button = $(e.relatedTarget);
                var orderId = button.data('id'); 
                var modal = $(this);

                $.ajax({
                    url: '/Orders?handler=Items&id=' + orderId,
                    method: 'GET',
                    success: function (data) {
                        modal.find('#modalBody').html(data);
                    },
                    error: function () {
                        modal.find('#modalBody').html('<p>خطا در بارگذاری داده‌ها.</p>');
                    }
                });
            });
        });
    </script>
}
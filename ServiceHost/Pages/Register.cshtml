@page
@using _01_Framework.Application
@using _01_Framework.Infrastructure
@model ServiceHost.Pages.RegisterModel
@{
    ViewData["Title"] = "ثبت نام";
    Layout = "Shared/_Layout";
}
@section Css
{
    <style>
        input[type="number"]::-webkit-outer-spin-button,
        input[type="number"]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type="number"] {
            -moz-appearance: textfield;
        }

        .password-help-box {
            background-color: #f8f9fa;
            border: 1px solid #e0e0e0;
            padding: 10px;
            margin-top: 10px;
            border-radius: 5px;
            font-size: 14px;
        }

            .password-help-box ul {
                list-style-type: none;
                padding-left: 0;
            }

            .password-help-box li {
                margin-bottom: 5px;
                display: flex;
                align-items: center;
            }

            .password-help-box span {
                font-weight: bold;
            }

            .password-help-box .check-icon {
                width: 15px;
                height: 15px;
                margin-left: 10px;
                background-image: url('check-icon.png'); 
                background-size: cover;
                display: none;
            }

            .password-help-box .text-success {
                color: #28a745;
            }

            .password-help-box .text-danger {
                color: #dc3545;
            }



    </style>
}
<div class="alert alert-warning">حداکثر حجم تصویر کارت ملی 5 مگابایت می‌باشد.</div>
<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-12 m-auto">
                                @if (!string.IsNullOrWhiteSpace(Model.RegisterMessage))
                                {
                                    <div class="alert alert-danger">@Model.RegisterMessage</div>
                                }
                                <form method="post" enctype="multipart/form-data">
                                    <div class="login-form">
                                        <div class="row">
                                            <div class="col-12 mb-20">
                                                <div class="text-center form-check">
                                                    <input type="radio"
                                                           class="btn-check"
                                                           name="Command.RoleId"
                                                           id="roleStudent"
                                                           value="@Roles.Student"
                                                           autocomplete="off"
                                                           @(Model.Command.RoleId == 3 ? "checked" : "")>
                                                    <label class="btn btn-outline-primary" for="roleStudent">دانشجو هستم</label>

                                                    <input type="radio"
                                                           class="btn-check"
                                                           name="Command.RoleId"
                                                           id="roleProfessor"
                                                           value="@Roles.Professor"
                                                           autocomplete="off"
                                                           @(Model.Command.RoleId == 2 ? "checked" : "")>
                                                    <label class="btn btn-outline-danger" for="roleProfessor">استاد هستم</label>
                                                </div>
                                            </div>

                                            <div class="col-md-6 col-12 mb-20">
                                                <label class="control-label" asp-for="Command.FirstName">نام <span class="red-star">*</span></label>
                                                <input class="form-control" maxlength="150" type="text" asp-for="Command.FirstName" placeholder="نام">
                                                <span asp-validation-for="Command.FirstName" class="error"></span>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label class="control-label" asp-for="Command.LastName">نام خانوادگی <span class="red-star">*</span></label>
                                                <input asp-for="Command.LastName" class="form-control" maxlength="200" type="text" placeholder="نام خانوادگی">
                                                <span asp-validation-for="Command.LastName" class="error"></span>

                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label class="control-label" asp-for="Command.NationalCode">کد ملی <span class="red-star">*</span></label>
                                                <input asp-for="Command.NationalCode" onchange="checkNationalCode(this)" class="form-control" maxlength="10" type="text" placeholder="کد ملی">
                                                <span asp-validation-for="Command.NationalCode" class="error"></span>

                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label class="control-label" asp-for="Command.NationalCardPicture">کارت ملی <span class="red-star">*</span></label>
                                                <input asp-for="Command.NationalCardPicture" id="inputPicture" class="form-control" type="file" accept="image/*">
                                                <span asp-validation-for="Command.NationalCardPicture" class="error"></span>

                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label class="control-label" asp-for="Command.Code">کد استادی/دانشجویی <span class="red-star">*</span></label>
                                                <input asp-for="Command.Code" class="form-control" maxlength="14" type="text" placeholder="کد استادی/دانشجویی">
                                                <span asp-validation-for="Command.Code" class="error"></span>

                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label class="control-label" asp-for="Command.Major">رشته <span class="red-star">*</span></label>
                                                <select asp-for="Command.Major" class="form-control my-1 mr-sm-2 select22" asp-items='new SelectList(Majors.List, "Id", "Name")'>
                                                    <option value="0">رشته</option>
                                                </select>
                                                <span asp-validation-for="Command.Major" class="error"></span>

                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label class="control-label" asp-for="Command.UniversityType">نوع دانشگاه <span class="red-star">*</span></label>
                                                <select class="custom-select my-1 mr-sm-2" asp-for="Command.UniversityType" asp-items="Model.UniTypes" onchange="FillUnis(this);">
                                                </select>
                                                <span asp-validation-for="Command.UniversityType" class="error"></span>

                                            </div>
                                            <div class="col-md-6 col-12 mb-20 form-group">
                                                <label class="control-label" asp-for="Command.University">دانشگاه <span class="red-star">*</span></label>
                                                <select id="lstUnis" class="form-control my-1 mr-sm-2" asp-for="Command.University" asp-items="Model.Unis">
                                                </select>
                                                <span asp-validation-for="Command.University" class="error"></span>

                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label class="control-label" asp-for="Command.PhoneNumber">موبایل <span class="red-star">*</span></label>
                                                <input class="form-control" maxlength="11" type="text" asp-for="Command.PhoneNumber" placeholder="موبایل">
                                                <span asp-validation-for="Command.PhoneNumber" class="error"></span>
                                            </div>
                                            <div id="educationLevelWrapper" class="col-md-6 col-12 mb-20">
                                                <label asp-for="Command.EducationLevel" class="control-label">مقطع تحصیلی</label>
                                                <select id="educationLevelSelect" class="form-control" asp-for="Command.EducationLevel">
                                                    <option value="0">مقطع تحصیلی</option>
                                                    <option value="@EducationLevels.Kardani">کاردانی</option>
                                                    <option value="@EducationLevels.Karshenasi">کارشناسی</option>
                                                    <option value="@EducationLevels.Arshad">کارشناسی ارشد</option>
                                                    <option value="@EducationLevels.Doktora">دکتری</option>
                                                    <option value="@EducationLevels.FoghDoktora">فوق دکتری</option>
                                                    <option value="@EducationLevels.ProfessorOrAdmin">استاد هستم</option>
                                                </select>
                                                <span asp-validation-for="Command.EducationLevel" class="error"></span>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label class="control-label" asp-for="Command.Email">ایمیل <span class="red-star">*</span></label>
                                                <input maxlength="300" class="form-control" type="email" asp-for="Command.Email" placeholder="ایمیل" style="direction: rtl">
                                                <span asp-validation-for="Command.Email" class="error"></span>

                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label class="control-label" asp-for="Command.Password">کلمه عبور <span class="red-star">*</span></label>
                                                <input class="form-control" type="password" id="password" asp-for="Command.Password" placeholder="کلمه عبور">
                                                <span asp-validation-for="Command.Password" class="error"></span>
                                                
                                                <div class="password-help-box">
                                                    <ul>
                                                        <li id="lengthCheck" class="password-condition">
                                                            <span>طول رمز عبور باید حداقل 8 کاراکتر باشد.</span>
                                                            <span class="check-icon"></span>
                                                        </li>
                                                        <li id="caseCheck" class="password-condition">
                                                            <span>باید شامل حروف بزرگ و کوچک لاتین باشد.</span>
                                                            <span class="check-icon"></span>
                                                        </li>
                                                        <li id="persianCheck" class="password-condition">
                                                            <span>از حروف فارسی استفاده نکنید.</span>
                                                            <span class="check-icon"></span>
                                                        </li>
                                                        <li id="specialCharCheck" class="password-condition">
                                                            <span>باید حداقل از یک کاراکتر خاص استفاده کنید.</span>
                                                            <span class="check-icon"></span>
                                                        </li>
                                                    </ul>
                                                </div>

                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label class="control-label" asp-for="Command.RePassword">تکرار کلمه عبور <span class="red-star">*</span></label>
                                                <input class="form-control" id="rePassword" type="password" asp-for="Command.RePassword" placeholder="تکرار کلمه عبور">
                                                <span asp-validation-for="Command.RePassword" class="error"></span>

                                            </div>
                                            <div class="col-12">
                                                <button type="submit" class="btn btn-success w-100 mt-3">ثبت نام</button>
                                            </div>
                                            <div class="col-12 text-center mt-2">
                                                <p>آیا قبلا ثبت نام کرده‌اید؟ <span class="text-primary"><a asp-page="/Login">ورود</a></span></p>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>

    <script>
        $(document).ready(function () {
            $(".select22").select2();
        });
    </script>


    <script>
        const inputPicture = document.getElementById('inputPicture');
        const maxSize = 5*1024*1024;

        inputPicture.addEventListener('change', function() {
            const file = this.files[0];
            if (file) {
                if (file.size > maxSize) {
                    alert('حجم فایل تصویر نباید بیشتر از 5 مگابایت باشد.');
                    this.value = '';
                }
            }
        });
    </script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const roleProfessorRadio = document.getElementById('roleProfessor');
            const roleStudentRadio = document.getElementById('roleStudent');
            const educationLevelWrapper = document.getElementById('educationLevelWrapper');
            const educationLevelSelect = document.getElementById('educationLevelSelect');
            const professorEducationLevelValue = '6';
            const professorOption = educationLevelSelect.querySelector(`option[value='${professorEducationLevelValue}']`);


            function updateEducationLevelAndVisibility() {
                if (roleProfessorRadio.checked) {
                    educationLevelSelect.value = professorEducationLevelValue;
                    educationLevelWrapper.style.display = 'none';
                } else if (roleStudentRadio.checked) {
                    educationLevelSelect.value = '0';
                    educationLevelWrapper.style.display = 'block'; 
                    professorOption.style.display = 'none';
                }
            }

            roleProfessorRadio.addEventListener('change', updateEducationLevelAndVisibility);
            roleStudentRadio.addEventListener('change', updateEducationLevelAndVisibility);

            updateEducationLevelAndVisibility();
        });
    </script>
    
    <script>
        document.getElementById('password').addEventListener('input', function() {
    const password = this.value;

    
    const lengthCheck = document.getElementById('lengthCheck');
    const caseCheck = document.getElementById('caseCheck');
    const persianCheck = document.getElementById('persianCheck');
    const specialCharCheck = document.getElementById('specialCharCheck');

    
    if (password.length >= 8) {
        lengthCheck.querySelector('.check-icon').style.display = 'inline-block';
        lengthCheck.style.color = '#28a745';
    } else {
        lengthCheck.querySelector('.check-icon').style.display = 'none'; 
        lengthCheck.style.color = '#dc3545'; 
    }

    
    if (/[a-z]/.test(password) && /[A-Z]/.test(password)) {
        caseCheck.querySelector('.check-icon').style.display = 'inline-block';
        caseCheck.style.color = '#28a745';
    } else {
        caseCheck.querySelector('.check-icon').style.display = 'none';
        caseCheck.style.color = '#dc3545';
    }

    
    if (!/[آ-ی]/.test(password)) {
        persianCheck.querySelector('.check-icon').style.display = 'inline-block';
        persianCheck.style.color = '#28a745';
    } else {
        persianCheck.querySelector('.check-icon').style.display = 'none';
        persianCheck.style.color = '#dc3545';
    }

    
    if (/[!@@#$%^&*(),.?":{}|<>]/.test(password)) {
        specialCharCheck.querySelector('.check-icon').style.display = 'inline-block';
        specialCharCheck.style.color = '#28a745';
    } else {
        specialCharCheck.querySelector('.check-icon').style.display = 'none';
        specialCharCheck.style.color = '#dc3545';
    }
        });

    </script>


}

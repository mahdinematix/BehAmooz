@page
@using _01_Framework.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ServiceHost.Pages.RegisterModel
@{
}
@section Css
{
    <style>
        input[type="number"]::-webkit-outer-spin-button,
        input[type="number"]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
        input[type="number"] {
            -moz-appearance: textfield;
        }
    </style>
}

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-12 m-auto">
                                @if (Model.RegisterMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.RegisterMessage</div>
                                }
                                <form method="post">
                                    <div class="login-form">
                                        <div class="row">
                                            <div class="col-12 mb-20">
                                                <div class="text-center form-check">
                                                    <input type="radio" class="btn-check" value="@Roles.Student" name="roleId" id="student" autocomplete="off" checked>
                                                    <label class="btn btn-outline-primary" for="student">دانشجو هستم</label>

                                                    <input type="radio" class="btn-check" value="@Roles.Professor" name="roleId" id="proffessor" autocomplete="off">
                                                    <label class="btn btn-outline-danger" for="proffessor">استاد هستم</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام <span class="red-star">*</span></label>
                                                <input class="form-control" maxlength="150" type="text" name="firstName" placeholder="نام" required>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام خانوادگی <span class="red-star">*</span></label>
                                                <input class="form-control" maxlength="200" type="text" name="lastName" placeholder="نام خانوادگی" required>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>کد ملی <span class="red-star">*</span></label>
                                                <input class="form-control" maxlength="10" type="text" name="nationalCode" placeholder="کد ملی" required>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>کارت ملی <span class="red-star">*</span></label>
                                                <input class="form-control" type="text" name="nationalCardPicture" accept="image/*" required>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>کد استادی/دانشجویی <span class="red-star">*</span></label>
                                                <input class="form-control" maxlength="20" type="text" name="code" placeholder="کد استادی/دانشجویی" required>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>رشته <span class="red-star">*</span></label>
                                                <select class="form-control my-1 mr-sm-2 select22" name="major" asp-items='new SelectList(Majors.List, "Id", "Name")' required>
                                                    <option value="0">رشته</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نوع دانشگاه <span class="red-star">*</span></label>
                                                <select class="custom-select my-1 mr-sm-2" name="universityType" asp-items="Model.UniTypes" onchange="FillUnis(this);" required>
                                                </select>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20 form-group">
                                                <label>دانشگاه <span class="red-star">*</span></label>
                                                <select id="lstUnis" class="form-control my-1 mr-sm-2" name="university" asp-items="Model.Unis" required>
                                                </select>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>موبایل <span class="red-star">*</span></label>
                                                <input class="form-control" maxlength="11" type="text" name="phoneNumber" placeholder="موبایل" required>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>ایمیل <span class="red-star">*</span></label>
                                                <input maxlength="300" class="form-control" type="email" name="email" placeholder="ایمیل" style="direction: rtl" required>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>کلمه عبور <span class="red-star">*</span></label>
                                                <input class="form-control" type="password" id="password" name="password" placeholder="کلمه عبور" required>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>تکرار کلمه عبور <span class="red-star">*</span></label>
                                                <input class="form-control" id="rePassword" type="password" name="rePassword" placeholder="تکرار کلمه عبور" required>
                                                <span class="error" id="rePassAlert"></span>
                                            </div>
                                            <div class="col-12">
                                                <button type="submit" class="btn btn-success w-100 mt-3">ثبت نام</button>
                                            </div>
                                            <div class="col-12 text-center mt-2">
                                                <p>آیا قبلا ثبت نام کرده‌اید؟ <span class="text-primary"><a asp-page="/Login">ورود</a></span></p>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>

    <script>
        $(document).ready(function () {
            $(".select22").select2();
        });
    </script>
}

@page
@model ServiceHost.Pages.LoginModel
@{
    ViewData["Title"] = "ورود";
}

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 m-auto">
                                @if (Model.LoginMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.LoginMessage</div>
                                }
                                <form method="post">
                                    <div class="login-form">
                                        <div class="row">
                                            <div class="col-md-12 col-12">
                                                <label>نام کاربری</label>
                                                <input class="form-control" type="text" name="username" placeholder="نام کاربری">
                                            </div>
                                            <div class="col-12">
                                                <label>کلمه عبور</label>
                                                <input class="form-control" type="password" name="password" placeholder="کلمه عبور">

                                            </div>
                                            <div class="col-md-12 col-12 text-center">
                                                <button type="submit" class="btn btn-primary w-100">ورود</button>
                                            </div>
                                            <div class="col-md-12 col-12 text-center">
                                                <a asp-page="ForgetPassword" class="btn btn-danger mt-3 d-block">فراموشی رمز عبور</a>

                                            </div>
                                            <div class="col-md-12 col-12 text-center">
                                                <a asp-page="Register" class="btn btn-warning p-2 mt-3 d-block">ثبت نام</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
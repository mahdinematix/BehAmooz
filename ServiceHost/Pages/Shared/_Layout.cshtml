<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @if (ViewData["Title"] != null)
    {
        <title>به‌آموز | @ViewData["Title"]</title>
    }
    else
    {
        <title>سامانه به‌آموز</title>
    }

    <link rel="icon" href="~/theme/assets/img/logo.png">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Theme/assets/css/vendors.css" rel="stylesheet" type="text/css">
    <link href="~/Theme/assets/css/style.css" rel="stylesheet" type="text/css">
    <link href="~/Theme/assets/css/Custom.css" rel="stylesheet" type="text/css">
    <link href="~/theme/assets/css/select2.min.css" rel="stylesheet" />
    @RenderSection("Css", false)
</head>

<body>

    @await Component.InvokeAsync("Menu")
    <hr />

    @RenderBody()

    @await Component.InvokeAsync("Footer")

    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.esm.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.esm.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js" type="text/javascript"></script>
    <script src="~/Theme/assets/js/vendors.js" type="text/javascript"></script>
    <script src="~/Theme/assets/js/active.js" type="text/javascript"></script>
    <script src="~/Theme/assets/js/plugins.js" type="text/javascript"></script>
    <script src="~/Theme/assets/js/custom.js" type="text/javascript"></script>
    <script src="~/theme/assets/js/site.js" type="text/javascript"></script>
    <script src="~/theme/assets/js/select2.min.js" type="text/javascript"></script>
    
    <script>
        $(document).ready(function () {
            updateCart();
        });
    </script>
    @RenderSection("Scripts", false)

</body>

</html>
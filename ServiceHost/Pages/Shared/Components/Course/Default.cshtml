@using _01_Framework.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<_02_Query.Contracts.Course.CourseQueryModel>
@{

}

<div class="row m-5" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading text-center mb-4">
                <h3 class="panel-title" id="courses">ابتدا درس مورد نظر را انتخاب کنید سپس کلاس خود را انتخاب کنید.</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>نام درس</th>
                                    <th>کد درس</th>
                                    <th>رشته</th>
                                    <th>تعداد واحد</th>
                                    <th>نوع درس</th>
                                    <th>دانشگاه</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.Code</td>
                                            <td>@Majors.GetName(item.Major)</td>
                                            <td>@item.NumberOfUnit</td>
                                            <td>@item.CourseKind</td>
                                            <td>@Universities.GetName(item.University)</td>
                                            <td><a class="btn btn-success" asp-page="/Class" asp-route-courseId="@item.Id">مشاهده کلاس‌ها</a></td>
                                        </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

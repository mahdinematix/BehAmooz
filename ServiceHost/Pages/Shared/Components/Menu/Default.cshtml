@using _01_Framework.Application
@inject IAuthHelper AuthHelper
@{
}

<div class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="header-wrapper d-none d-lg-flex">
                    <div class="logo">
                        <a asp-page="/Index">
                            <img src="~/Theme/assets/img/logo.png" width="60%" class="img-fluid" alt="">
                        </a>
                    </div>
                    <div class="navigation-menu-wrapper">
                        <nav>
                            <ul>
                                <li>
                                    <a asp-page="/Index">صفحه اصلی</a>
                                </li>
                                @if (AuthHelper.IsAuthenticated())
                                {
                                    <li>
                                        <a asp-page="/MySessions">جلسات من</a>
                                    </li>
                                }
                                <li>
                                    <a asp-page="AboutUs">درباره ما</a>
                                </li>
                                <li>
                                    <a asp-page="ContactUs">ارتباط با ما</a>
                                </li>
                                @if (AuthHelper.IsAuthenticated())
                                {
                                    <li>
                                        <a asp-page="/Login" asp-page-handler="Logout">خروج</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a asp-page="/Account">ورود | ثبت نام</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                    <div class="header-icon-wrapper">
                        <ul class="icon-list">
                            @if (AuthHelper.IsAuthenticated())
                            {
                                <li>
                                    <a asp-page="/Cart">
                                        <div class="header-cart-icon">
                                            <i class="ion-bag"></i>
                                            <span class="counter cart_items_count">0</span>
                                            <div class="mini-cart" id="mini-cart">
                                                <div class="cart-items-wrapper ps-scroll" id="cart_items_wrapper">
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a asp-page="/Wallet">
                                        <div class="header-cart-icon">
                                            <img src="~/Theme/assets/img/wallet.png" width="30px" />
                                            <span class="counter cart_items_count">0 ریال</span>
                                            <div class="mini-cart" id="mini-cart">
                                                <div class="cart-items-wrapper ps-scroll" id="cart_items_wrapper">
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a asp-page="Profile">
                                        <i class="fa fa-user-circle"></i>
                                    </a>
                                    <p><strong>@AuthHelper.GetAccountInfo().Fullname</strong></p>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="header-mobile-navigation d-block d-lg-none">
                    <div class="row align-items-center">
                        <div class="col-6 col-md-6">
                            <div class="header-logo">
                                <a asp-page="/Index">
                                    <img src="~/Theme/assets/img/logo.png" class="img-fluid" alt="logo" width="50%">
                                </a>
                            </div>
                        </div>
                        <div class="col-6 col-md-6">
                            <div class="mobile-navigation text-right">
                                <div class="header-icon-wrapper">
                                    <ul class="icon-list justify-content-end">
                                        <li>
                                            <div class="header-cart-icon">
                                                <a asp-page="/Cart">
                                                    <i class="ion-bag"></i>
                                                    <span class="counter cart_items_count">0</span>
                                                </a>
                                            </div>
                                        </li>
                                        <li>
                                            <a asp-page="/Wallet">
                                                <div class="header-cart-icon">
                                                    <img src="~/Theme/assets/img/wallet.png" width="30px" />
                                                    <span class="counter cart_items_count">0 ریال</span>
                                                    <div class="mini-cart" id="mini-cart">
                                                        <div class="cart-items-wrapper ps-scroll" id="cart_items_wrapper">
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)" class="mobile-menu-icon"
                                               id="mobile-menu-trigger">
                                                <i class="fa fa-bars"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="offcanvas-mobile-menu" id="offcanvas-mobile-menu">
    <a href="javascript:void(0)" class="offcanvas-menu-close" id="offcanvas-menu-close-trigger">
        <i class="ion-android-close"></i>
    </a>

    <div class="offcanvas-wrapper">

        <div class="offcanvas-inner-content">
            <nav class="offcanvas-navigation">
                <ul>
                    <li class="">
                        <a asp-page="/Index">صفحه اصلی</a>
                    </li>
                    @if (AuthHelper.IsAuthenticated())
                    {
                        <li>
                            <a asp-page="/MySessions">جلسات من</a>
                        </li>
                    }
                    <li>
                        <a href="#contactUs" onclick="hideOffcanvas()">تماس با ما</a>
                    </li>
                    <li>
                        <a href="#contactUs" onclick="hideOffcanvas()">درباره ما</a>
                    </li>
                    <li>
                        <a asp-page="/Login" onclick="hideOffcanvas()">ورود/ثبت نام</a>
                    </li>
                </ul>
            </nav>

        </div>
    </div>
</div>


<script>
    function hideOffcanvas() {
       $("#offcanvas-mobile-menu").click(function(){
           $('#offcanvas-mobile-menu').removeClass('active').addClass('inactive');
    });
    }

</script>
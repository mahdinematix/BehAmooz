@page
@using _01_Framework.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ServiceHost.Pages.MySessionsModel
@{
}

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading text-center mb-4">
                <h3 class="panel-title">جلسات خریداری شده</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>جلسه</th>
                                    <th>روز کلاس</th>
                                    <th>ساعت کلاس</th>
                                    <th>درس</th>
                                    <th>استاد</th>
                                    <th>تاریخ خرید</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.SessionNumber</td>
                                        <td>@Days.GetName(item.ClassDay)</td>
                                        <td>@item.ClassStartTime تا @item.ClassEndTime</td>
                                        <td>@item.CourseName</td>
                                        <td>@item.ProfessorFullName</td>
                                        <td>@item.PayDate</td>
                                        <td><a class="btn btn-success" asp-page="/Session" asp-route-sessionId="@item.SessionId">مشاهده</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@page
@using _01_Framework.Application
@using _01_Framework.Infrastructure
@model IndexModel
@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "صفحه اصلی";
}
@await Component.InvokeAsync("StudentMessages")



<div class="row m-5">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در دروس</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group m-2">
                        <label class="sr-only" asp-for="SearchModel.Name"></label>
                        <input class="form-control" asp-for="SearchModel.Name" data-val="false" placeholder="نام درس">
                    </div>

                    <div class="form-group m-2">
                        <label class="sr-only" asp-for="SearchModel.Code"></label>
                        <input class="form-control" asp-for="SearchModel.Code" data-val="false" placeholder="کد درس">
                    </div>
                    <div class="form-group m-2">
                        <label class="sr-only" asp-for="SearchModel.CourseKind"></label>
                        <select class="form-control" asp-for="SearchModel.CourseKind" data-val="false">
                            <option value="0">نوع درس را انتخاب کنید...</option>
                            <option value="نظری">نظری</option>
                            <option value="عملی">عملی</option>
                        </select>
                    </div>
                    <button type="submit" class=" m-2 btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10  m-2" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row m-5" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading text-center mb-4">
                <h3 class="panel-title" id="courses">ابتدا درس مورد نظر را انتخاب کنید سپس کلاس خود را انتخاب کنید.</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>نام درس</th>
                                    <th>کد درس</th>
                                    <th>رشته</th>
                                    <th>تعداد واحد</th>
                                    <th>نوع درس</th>
                                    <th>مقطع</th>
                                    <th>ترم</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Courses)
                                {

                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Code</td>
                                        <td>@Majors.GetName(item.Major)</td>
                                        <td>@item.NumberOfUnit</td>
                                        <td>@item.CourseKind</td>
                                        <td>@EducationLevels.GetEducationLevelById(item.EducationLevel)</td>
                                        <td>@item.SemesterCode</td>
                                        <td><a class="btn btn-success" asp-page="/Class" asp-route-courseId="@item.Id">مشاهده کلاس‌ها</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
